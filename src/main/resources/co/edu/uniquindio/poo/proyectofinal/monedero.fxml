<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectofinal.viewController.MonederoControlador">
    <top>
        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: #333;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Monedero Virtual" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <left>
        <VBox prefHeight="550.0" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Bienvenido,">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="labelClienteNombre" text="Nombre Cliente" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Separator prefWidth="200.0" />
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="70.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="130.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Puntos:" />
                        <Label text="Rango:" GridPane.rowIndex="1" />
                        <Label fx:id="labelPuntos" text="0" textFill="#2980b9" GridPane.columnIndex="1">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="labelRango" text="Bronce" textFill="#2980b9" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </GridPane>
                <Separator prefWidth="200.0" />
                <Label text="Seleccione su Monedero:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="comboMonederos" prefWidth="250.0" promptText="Mis Monederos" />
                <Label text="Saldo Actual:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="labelSaldoActual" text="0.00" textFill="#27ae60">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Realizar Operaciones">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TabPane prefHeight="300.0" prefWidth="510.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Depósito">
                            <content>
                                <GridPane hgap="10.0" style="-fx-padding: 20;" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="213.0" minWidth="10.0" prefWidth="130.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="317.0" minWidth="10.0" prefWidth="317.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Monto a Depositar:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="fieldDepositoMonto" promptText="Ej: 500.00" GridPane.columnIndex="1" />
                                        <Button fx:id="btnDepositar" mnemonicParsing="false" onAction="#handleDepositar" prefHeight="40.0" prefWidth="500.0" text="Confirmar Depósito" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="Retiro">
                            <content>
                                <GridPane hgap="10.0" style="-fx-padding: 20;" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="213.0" minWidth="10.0" prefWidth="130.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="317.0" minWidth="10.0" prefWidth="317.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Monto a Retirar:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="fieldRetiroMonto" promptText="Ej: 100.00" GridPane.columnIndex="1" />
                                        <Button fx:id="btnRetirar" mnemonicParsing="false" onAction="#handleRetirar" prefHeight="40.0" prefWidth="500.0" text="Confirmar Retiro" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="Transferencia">
                            <content>
                                <GridPane hgap="10.0" style="-fx-padding: 20;" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="213.0" minWidth="10.0" prefWidth="130.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="317.0" minWidth="10.0" prefWidth="317.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Monto a Transferir:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="fieldTransferMonto" promptText="Ej: 50.00" GridPane.columnIndex="1" />
                                        <Button fx:id="btnTransferir" mnemonicParsing="false" onAction="#handleTransferir" prefHeight="40.0" prefWidth="500.0" text="Confirmar Transferencia" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="ID Monedero Destino:" GridPane.rowIndex="1">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="fieldTransferDestino" promptText="Ej: M-LUIS-01" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="Programar Tx">
                            <content>
                                <GridPane hgap="10.0" style="-fx-padding: 20;" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="213.0" minWidth="10.0" prefWidth="130.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="317.0" minWidth="10.0" prefWidth="317.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Monto a Transferir:" />
                                        <TextField fx:id="fieldMontoProgramado" promptText="Ej: 100.00" GridPane.columnIndex="1" />
                                        <Label text="ID Monedero Destino:" GridPane.rowIndex="1" />
                                        <TextField fx:id="fieldDestinoProgramado" promptText="Ej: LUIS-01" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Fecha de Ejecución:" GridPane.rowIndex="2" />
                                        <DatePicker fx:id="datePickerFecha" prefWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Periodicidad:" GridPane.rowIndex="3" />
                                        <ComboBox fx:id="comboPeriodicidad" prefWidth="350.0" promptText="Seleccionar..." GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <Button fx:id="btnProgramarTx" onAction="#handleProgramarTransferencia" prefHeight="40.0" prefWidth="500.0" text="Programar Transferencia" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="Canjear Beneficios">
                            <content>
                                <VBox spacing="15.0" style="-fx-padding: 20;">
                                    <Label text="Beneficios Disponibles (Bonos por Dinero)">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <Label text="Selecciona un beneficio de la lista y presiona 'Canjear'.">
                                        <font>
                                            <Font size="12.0" />
                                        </font>
                                    </Label>
                                    <ListView fx:id="listBeneficios" prefHeight="200.0" />
                                    <Button fx:id="btnCanjear" onAction="#handleCanjearBeneficio" prefHeight="40.0" prefWidth="510.0" text="Canjear Beneficio Seleccionado" />
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox prefHeight="150.0" prefWidth="800.0" style="-fx-padding: 10; -fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Actividad y Notificaciones:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextArea fx:id="areaLog" editable="false" prefHeight="120.0" prefWidth="780.0" wrapText="true" />
            </children>
        </VBox>
    </bottom>
</BorderPane>
